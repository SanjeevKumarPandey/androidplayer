<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AboutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ActivityCatalog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CatalogContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/almost_white</item>
    </style>

    <style name="CatalogTileGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:verticalSpacing">2dp</item>
        <item name="android:gravity">fill_vertical</item>
    </style>

    <style name="CatalogTileGrid.Small">
        <item name="android:numColumns">1</item>
    </style>

    <style name="CatalogTileGrid.Large">
        <item name="android:numColumns">2</item>
        <item name="android:horizontalSpacing">2dp</item>
    </style>

    <style name="CatalogContentLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CatalogContentLoadingMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CatalogContentLoadingSpinner" parent="android:Widget.Holo.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ButtonContentRefresh" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/action_refresh</item>
    </style>

    <style name="CatalogItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CatalogItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CatalogItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
